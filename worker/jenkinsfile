pipeline{
    agent any
    
    tools{
        maven 'Maven 3.6.1'
    }

    stages{
        stage('build'){
            steps{
                echo "Compiling worker app"   
                dir('worker'){
                    sh 'mvn compile'
                }
            }
        }
        stage('step'){
            steps{
                echo "Running Unit Tests on worker app"    
                sleep 9
            }
        }
        stage('package'){
            steps{
                echo "Packaging worker app"    
                sleep 5
            }
        }
    }
    post{
        always{
            echo 'Build pipeline for worker is complete....'
        }
    }
}