pipeline {
  agent any

  tools {
    npm 'nodejs 8.9.0'
  }

  stages{
    stage("build"){

      steps{
        echo 'step build'
        dir('result'){
          sh 'npm install'
        }
      }
    }
    stage('test'){

      steps{
        echo 'Running Unit Test on worker app.'
        dir('worker'){
          sh 'npm test'
        }
      }
    }

  }
  
}

