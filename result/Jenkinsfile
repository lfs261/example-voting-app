pipeline {
  agent any

  tools {
    nodejs 'nodejs 8.9.0'
  }

  stages{
    stage("build"){
      when{
        changeset "**/result/*"
      }

      steps{
        echo 'step build'
        dir('result'){
          sh 'npm install'
        }
      }
    }
    stage('test'){
      when{
        changeset "**/result/*"
      }

      steps{
        echo 'Running Unit Test on worker app.'
        dir('result'){
          sh 'npm test'
        }
      }
    }

  }
  
}

